<body>
  <header>
    <h1 class="title"><%= title %></h1>
    <p class="sub-title">
      <span class="sub time"><i class="fa fa-clock-o"></i><%= time %></span>
      <span class="sub fee"><i class="fa fa-jpy"></i><%= fee %></span>
    </p>
    <div class="image-wrapper">
      <div class="image" style="background-image:url(<%= image %>)"></div>
    </div>
  </header>
  <div id="contents">
    <article class="recipe">
      <div class="recipe-header">
        材料(<%= portion %>)
      </div>
        <ul class="materials">
          <% materials.each do |material| %>
            <li class="material">
              <input type="checkbox" name="check" id="<%= material[2] %>" />
              <span class="checkbox-icon"></span>
              <label for="<%= material[2] %>">
                <span class="material_name"><%= material[0].sub(/＊/, '') %></span>
                <span class="material_content"><%= material[1] %></span>
